{
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  }
}
